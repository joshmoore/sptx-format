{
  "$id": "https://github.com/spacetx/sptx-format/schema/codebook.json",
  "type": "object",
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "version",
    "contents"
  ],
  "properties": {
    "version": {
      "$ref": "schema/version.json"
    },
    "contents": {
      "$id": "/properties/contents",
      "description": "one or more {key: file} pairs that describe the location of fov.json files",
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^.*?.json$": {
          "type": "string",
          "examples": [
            "hybridization-fov_000.json",
            "experiment5.json"
          ]
        }
      }
    },
    "extras": {
      "$id": "/properties/extras",
      "description": "unstructured field used to contain additional data about this data manifest",
      "default": null,
      "examples": [
        null, "spaceTx is great", {"extra_metadata": "critical_info"}
      ]
    }
  }
}