{
  "$id": "https://github.com/spacetx/sptx-format/schema/field_of_view/field_of_view.json",
  "type": "object",
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "version",
    "dimensions",
    "shape",
    "fov",
    "tiles"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "$ref": "schema/version.json"
    },
    "extras": {
      "$id": "/properties/extras",
      "description": "unstructured field used to contain additional data about this data manifest",
      "default": null,
      "examples": [
        null, "spaceTx is great", {"extra_metadata": "critical_info"}
      ]
    },
    "dimensions": {
      "$id": "/properties/dimensions",
      "type": "array",
      "description": "dimensions of the image tensor described by this fov specification",
      "minItems": 1,
      "items": {
        "$id": "/properties/dimensions/items",
        "type": "string",
        "title": "Dimensions schema",
        "description": "a dimension of the tensor described by this fov specification",
        "examples": [
          "x",
          "y",
          "c",
          "z",
          "r"
        ]
      }
    },
    "shape": {
      "$id": "/properties/shape",
      "type": "object",
      "required": [
        "c", "z"
      ],
      "properties": {
        "r": {
          "$id": "/properties/shape/properties/r",
          "description": "Number of imaging rounds",
          "type": "integer",
          "default": 1,
          "examples": [
            1, 2, 10
          ],
          "minimum": 1
        },
        "c": {
          "$id": "/properties/shape/properties/c",
          "type": "integer",
          "description": "Number of channels",
          "default": 1,
          "examples": [
            3, 5, 10
          ],
          "minimum": 1
        },
        "z": {
          "$id": "/properties/shape/properties/z",
          "type": "integer",
          "title": "Number of z-sections",
          "default": 1,
          "examples": [
            1, 34, 67
          ],
          "minimum": 1
        }
      }
    },
    "fov": {
      "$id": "/properties/fov",
      "type": "integer",
      "minimum": 0,
      "description": "identifies the index of this field of view within a larger experiment",
      "examples": [
        0, 1, 4
      ]
    },
    "tiles": {
      "minItems": 1,
      "items": {
        "$ref": "schema/field_of_view/tiles/tiles.json"
      }
    },
    "default_tile_shape": {
      "$id": "/properties/default_tile_shape",
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "$id": "/properties/default_tile_shape/items",
        "type": "integer",
        "description": "the default tile shape (x, y) of the tiles in this field of view.",
        "example": 2048,
        "minimum": 0
      }
    },
    "default_tile_format": {
      "$id": "/properties/default_tile_format",
      "type": "string",
      "title": "The default tile format for this field of view.",
      "examples": [
        "TIFF",
        "NPY"
      ]
    }
  }
}