{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/sptx-format/schema/field_of_view/tiles/coordinates.json",
  "type": "object",
  "description": "physical coordinates of the tile.",
  "required": ["x", "y", "z"],
  "additionalProperties": false,
  "properties": {
    "x": {
      "$id": "/properties/tiles/items/properties/coordinates/properties/x",
      "type": "array",
      "minItems": 1,
      "maxItems": 2,
      "items": {
        "$id": "/properties/tiles/items/properties/coordinates/properties/x/items",
        "type": "number",
        "description": "minimum and maximum physical x coordinate of this tile.",
        "examples": [
          [0, 0.00009999999747378752],
          [4, 6],
          [-5, -3.2]
        ]
      }
    },
    "y": {
      "$id": "/properties/tiles/items/properties/coordinates/properties/y",
      "type": "array",
      "minItems": 1,
      "maxItems": 2,
      "items": {
        "$id": "/properties/tiles/items/properties/coordinates/properties/y/items",
        "type": "number",
        "title": "minimum and maximum physical y-coordinate of this tile.",
        "examples": [
          [0, 0.00009999999747378752],
          [4, 6],
          [-5, -3.2]
        ]
      }
    },
    "z": {
      "$id": "/properties/tiles/items/properties/coordinates/properties/z",
      "type": "array",
      "minItems": 1,
      "maxItems": 2,
      "items": {
        "$id": "/properties/tiles/items/properties/coordinates/properties/z/items",
        "type": "number",
        "title": "minimum and maximum physical z-coordinate of this tile",
        "default": 0,
        "examples": [
          [0, 0.00009999999747378752],
          [4, 6],
          [-5]
        ]
      }
    }
  }
}
