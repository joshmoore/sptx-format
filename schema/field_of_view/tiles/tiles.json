{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema/field_of_view/tiles/tiles.json",
  "description": "specification of a 2-d image tile",
  "type": "object",
  "required": [
    "coordinates",
    "indices",
    "file",
    "sha256"
  ],
  "additionalProperties": false,
  "properties": {
    "coordinates": {
      "$ref": "coordinates.json"
    },
    "indices": {
      "$ref": "indices.json"
    },
    "file": {
      "$id": "/properties/tiles/items/properties/file",
      "type": "string",
      "description": "A relative or absolute location of the image file containing data for this tile.",
      "example": "img_000000000_Bandpass488_000.tif"
    },
    "sha256": {
      "$id": "/properties/tiles/items/properties/sha256",
      "type": [
        "string",
        "null"
      ],
      "description": "The Sha256 hash result for the file corresponding to this tile.",
      "example": "e3b0c44298fc1c149afbf4c8996fb92427ae41e4649b934ca495991b7852b855"
    },
    "tile_format": {
      "$id": "/properties/tiles/items/properties/tile_format",
      "type": "string",
      "description": "the file format of this tile",
      "examples": [
        "TIFF",
        "NPY"
      ]
    },
    "tile_shape": {
      "$id": "/properties/tiles/items/properties/tile_shape",
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "$id": "/properties/tiles/items/properties/tile_shape/items",
        "type": "integer",
        "description": "the shape (x, y) of this tile."
      }
    },
    "extras": {
      "$id": "/properties/extras",
      "description": "unstructured field used to contain additional data about this data manifest",
      "default": null,
      "examples": [
        null, "spaceTx is great", {"extra_metadata": "critical_info"}
      ]
    }
  }
}
