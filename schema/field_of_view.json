{
  "$id": "http://example.com/example.json",
  "type": "object",
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "version": {
      "description": "the version number of the schema in major.minor.patch format.",
      "type": "string",
      "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
      "example": "1.0.0"
    },
    "extras": {
      "$id": "/properties/extras",
      "description": "unstructured field used to contain additional data about this data manifest",
      "default": null,
      "examples": [
        null, "spaceTx is great", {"extra_metadata": "critical_info"}
      ]
    },
    "dimensions": {
      "$id": "/properties/dimensions",
      "type": "array",
      "description": "dimensions of the image tensor described by this fov specification",
      "minItems": 1,
      "items": {
        "$id": "/properties/dimensions/items",
        "type": "string",
        "title": "Dimensions schema",
        "description": "a dimension of the tensor described by this fov specification",
        "examples": [
          "x",
          "y",
          "c",
          "z",
          "r"
        ]
      }
    },
    "shape": {
      "$id": "/properties/shape",
      "type": "object",
      "required": [
        "c", "z"
      ],
      "properties": {
        "r": {
          "$id": "/properties/shape/properties/r",
          "description": "Number of imaging rounds",
          "type": "integer",
          "default": 1,
          "examples": [
            1, 2, 10
          ],
          "minimum": 1
        },
        "c": {
          "$id": "/properties/shape/properties/c",
          "type": "integer",
          "description": "Number of channels",
          "default": 1,
          "examples": [
            3, 5, 10
          ],
          "minimum": 1
        },
        "z": {
          "$id": "/properties/shape/properties/z",
          "type": "integer",
          "title": "Number of z-sections",
          "default": 1,
          "examples": [
            1, 34, 67
          ],
          "minimum": 1
        }
      }
    },
    "tiles": {
      "$id": "/properties/tiles",
      "type": "array",
      "minItems": 1,
      "items": {
        "$id": "/properties/tiles/items",
        "type": "object",
        "required": [
          "coordinates",
          "indices",
          "file",
          "Sha256"
        ],
        "properties": {
          "coordinates": {
            "$id": "/properties/tiles/items/properties/coordinates",
            "type": "object",
            "description": "physical coordinates of the tile.",
            "required": ["x", "y", "z"],
            "properties": {
              "x": {
                "$id": "/properties/tiles/items/properties/coordinates/properties/x",
                "type": "array",
                "minItems": 1,
                "maxItems": 2,
                "items": {
                  "$id": "/properties/tiles/items/properties/coordinates/properties/x/items",
                  "type": "number",
                  "description": "minimum and maximum physical x coordinate of this tile.",
                  "examples": [
                    [0, 0.00009999999747378752],
                    [4, 6],
                    [-5, -3.2]
                  ]
                }
              },
              "y": {
                "$id": "/properties/tiles/items/properties/coordinates/properties/y",
                "type": "array",
                "minItems": 1,
                "maxItems": 2,
                "items": {
                  "$id": "/properties/tiles/items/properties/coordinates/properties/y/items",
                  "type": "number",
                  "title": "minimum and maximum physical y-coordinate of this tile.",
                  "examples": [
                    [0, 0.00009999999747378752],
                    [4, 6],
                    [-5, -3.2]
                  ]
                }
              },
              "z": {
                "$id": "/properties/tiles/items/properties/coordinates/properties/z",
                "type": "array",
                "minItems": 1,
                "maxItems": 2,
                "items": {
                  "$id": "/properties/tiles/items/properties/coordinates/properties/z/items",
                  "type": "number",
                  "title": "minimum and maximum physical z-coordinate of this tile",
                  "default": 0,
                  "examples": [
                    [0, 0.00009999999747378752],
                    [4, 6],
                    [-5, -3.2]
                  ]
                }
              }
            }
          },
          "indices": {
            "$id": "/properties/tiles/items/properties/indices",
            "type": "object",
            "description": "Describes the categorical indices (channel, round, and z-section) of this tile",
            "required": ["c", "z"],
            "properties": {
              "r": {
                "$id": "/properties/tiles/items/properties/indices/properties/r",
                "type": "integer",
                "description": "The imaging round of this tile.",
                "default": 0,
                "examples": [
                  0
                ],
                "minimum": 0
              },
              "c": {
                "$id": "/properties/tiles/items/properties/indices/properties/c",
                "type": "integer",
                "title": "The channel of this tile.",
                "examples": [
                  0, 2, 5
                ],
                "minimum": 0
              },
              "z": {
                "$id": "/properties/tiles/items/properties/indices/properties/z",
                "type": "integer",
                "title": "The relative z-index in pixel space of this tile.",
                "examples": [
                  0, 3, 7
                ],
                "minimum": 0
              }
            }
          },
          "file": {
            "$id": "/properties/tiles/items/properties/file",
            "type": "string",
            "description": "A relative or absolute location of the image file containing data for this tile.",
            "example": "img_000000000_Bandpass488_000.tif"
          },
          "sha256": {
            "$id": "/properties/tiles/items/properties/sha256",
            "type": [
              "string",
              "null"
            ],
            "description": "The Sha256 hash result for the file corresponding to this tile.",
            "example": "e3b0c44298fc1c149afbf4c8996fb92427ae41e4649b934ca495991b7852b855"
          },
          "tile_format": {
            "$id": "/properties/tiles/items/properties/tile_format",
            "type": "string",
            "description": "the file format of this tile",
            "examples": [
              "TIFF",
              "NPY"
            ]
          },
          "tile_shape": {
            "$id": "/properties/tiles/items/properties/tile_shape",
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
              "$id": "/properties/tiles/items/properties/tile_shape/items",
              "type": "integer",
              "description": "the shape (x, y) of this tile.",
              "example": 2048,
              "minimum": 0
            }
          }
        }
      }
    },
    "default_tile_shape": {
      "$id": "/properties/default_tile_shape",
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "$id": "/properties/default_tile_shape/items",
        "type": "integer",
        "description": "the default tile shape (x, y) of the tiles in this field of view.",
        "example": 2048,
        "minimum": 0
      }
    },
    "default_tile_format": {
      "$id": "/properties/default_tile_format",
      "type": "string",
      "title": "The default tile format for this field of view.",
      "examples": [
        "TIFF",
        "NPY"
      ]
    }
  }
}